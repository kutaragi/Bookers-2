<%= flash[:notice] %>
<% if @user.errors.any? %>
    <div>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<h1>User info</h1>
<%= form_for(@user) do |f| %>
	<div class="field">
		<label for="name">Name</label>
		<%= f.text_field :name, autofocus: true, id: "name" %>
	<div class="field">
		<label>Image</label>
		<%= f.attachment_field :profile_image, placeholder: "プロフィール画像"%>
	</div>
	<div class="field">
		<label for="introduction">Introduction</label>
		<%= f.text_area :introduction, id: "introduction"%>
	</div>
		<%= f.submit "Update User"%>
<% end %>