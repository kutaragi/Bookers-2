<div class="col-md-3">
	<h1>User info</h1>
	<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format:'jpeg', fallback: "no_image.jpg"%>
	<table class="table">
		<tbody>
			<tr>
				<td>name</td>
				<td><%= @user.name %></td>
			</tr>
			<tr>
				<td>introduction</td>
				<td><%= @user.introduction %></td>
			</tr>
		</tbody>
	</table>

	<%= link_to "Edit", edit_user_path(@user), class: "btn btn-default col-md-12"%>

	<h1>New book</h1>
	<%= form_for(@book, url: books_path) do |f| %>
		<label class="col-md-12", for="book_title">Title</label>
		<%= f.text_field :title, class: "col-md-12", id: "book_title" %>
		<label class="col-md-12", for="book_opinion">Opinion</label>
		<%= f.text_area :body, class: "col-md-12", id: "book_opinion" %>
		<%= f.submit "Create Book", class: "col-md-12 btn btn-primary" %>
	<% end %>
</div>

<div class="col-md-9">
	<h1>Users</h1>

		<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
				</tr>
			</thead>
			<% @users.each do |user| %>
			<tbody>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format:'jpeg', fallback: "no_image.jpg", :width => "40", :height => "40"%></td>
					<td>
						<%= user.name %>
					</td>
					<td><%= link_to "show", user_path(user.id)%></td>
				</tr>
			</tbody>
			<% end %>
		</table>
</div>