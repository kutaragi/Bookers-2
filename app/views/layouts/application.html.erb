<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <div class="container">
        <nav class="navbar navbar-inverse">
          <div class="nav-wrap">
            <div class="navbar-header">
              <p class="navbar-brand">Bookers</p>
            </div>
            <ul class="nav navbar-nav">
              <% if user_signed_in? %>
              <li><%= link_to "Home", user_path(current_user.id) %></li>
              <li><%= link_to "Users", users_path %></li>
              <li><%= link_to "Books", books_path %></li>
              <li><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
              <% else %>
              <li><%= link_to "Home", root_path %></li>
              <li><%= link_to "About", home_about_path %></li>
              <li><%= link_to "sign_up", new_user_registration_path %></li>
              <li><%= link_to "login", new_user_session_path %></li>
              <% end %>
            </ul>
          </div>
        </nav>
      </div>
    </div>
    <div class="body">
      <div class="container">
        <%= yield %>
      </div>
    </div>
    <div class="footer">
      <div class="container">
        <p class="copy-right">CopyRight Infratop.inc</p>
      </div>
    </div>
  </body>
</html>
